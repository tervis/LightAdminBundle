{% set flash_messages = app.flashes %}

{% if flash_messages|length > 0 %}
    <div id="flash-messages">
        {% for label, messages in flash_messages %}
            {% for message in messages %}
                <twig:la:Alert variant="{{ label }}" withDismissButton>
                    {{ message|trans|raw }}
                </twig:la:Alert>
            {% endfor %}
        {% endfor %}
    </div>
{% endif %}