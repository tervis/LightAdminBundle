{% set withCloseButton = withCloseButton is defined ? withCloseButton : true %}
{% if app.request.hasPreviousSession %}
    <div class="messages">
        {% for type, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert {{ withCloseButton ? 'alert-dismissible' : '' }} alert-{{ type }} fade show" role="alert">
                    {% if withCloseButton %}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="{{ 'Close' | trans }}"></button>
                    {% endif %}
                    {{ message|trans|raw }}
                </div>
            {% endfor %}
        {% endfor %}
    </div>
{% endif %}