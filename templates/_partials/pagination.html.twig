{# Pagination #}
{% if pagination is defined %}
<p>{{ 'Total items' | trans }}: {{ pagination.totalItems}}</p>
{% if pagination.totalItems > pagination.itemsPerPage %}
<nav>
    <ul class="pagination justify-content-center">
        {% if pagination.page > 1 %}
            <li class="page-item">
                <a class="page-link" href="{{ path(redirectRoute, {'page': page - 1}) }}">{{ 'Previous' | trans }}</a>
            </li>
        {% endif %}
        {% for i in 1..pagination.totalPages %}
            <li class="page-item {{ pagination.page == i ? 'active' : '' }}">
                <a class="page-link" href="{{ path(redirectRoute, {'page': i}) }}">{{ i }}</a>
            </li>
        {% endfor %}
        {% if pagination.page < pagination.totalPages %}
            <li class="page-item">
                <a class="page-link" href="{{ path(redirectRoute, {'page': pagination.page + 1}) }}">{{ 'Next' | trans }}</a>
            </li>
        {% endif %}
    </ul>
</nav>
{% endif %}
{% endif %}