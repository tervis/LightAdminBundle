<ul class="list-unstyled components4 mt-1 ms-2">
{# @var item \Tervis\LightAdminBundle\Dto\MenuItem #}


{% for item in menu.items %}

    {% if item.type == constant('Tervis\\LightADminBundle\\Dto\\MenuItem::TYPE_SECTION') %}
    <li><hr/></li>
    {% elseif item.type == constant('Tervis\\LightADminBundle\\Dto\\MenuItem::TYPE_SUBMENU') %}
    <li>
        <a href="#{{ item-label }}-menu" data-bs-toggle="collapse" aria-expanded="false" class="dropdown-toggle">
            <twig:ux:icon name='bi:gear' class="bi"/> {{ item.label | trans }}
        </a>
        <ul class="collapse list-unstyled" id="{{ item-label }}-menu">
            {% for item in menu.items %}
            <li>
                <a href="{{ path(item.routeName, item.routeParameters) }}" class="{{- currentPath == item.routeName ? 'active' : '' -}}">
                    <twig:ux:icon name='{{ item.icon }}' class="bi"/> {{ item.label | trans }}
                </a>
            </li>
            {% endfor %}
        </ul>
    </li>
    {% else %}
    <li>
        <a href="{{ path(item.routeName, item.routeParameters) }}" class="{{- currentPath == item.routeName ? 'active' : '' -}}">
            <twig:ux:icon name='{{ item.icon }}' class="bi"/> {{ item.label | trans }}
        </a>
    </li>
    {% endif %}

{% endfor %}
